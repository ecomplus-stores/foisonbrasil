<div class="<%= opt.container || opt.spacing.container %> ">
  <div 
      class="
        <%= opt.custom_css_class || ''%>
        apx list-shelf 
        mt-md-<%= opt.spacing?.desktop ? opt.spacing.desktop.margin_top : 0 %>
        mt-<%= opt.spacing?.mobile ? opt.spacing.mobile.margin_top : 0%>
        mb-md-<%= opt.spacing?.desktop ? opt.spacing.desktop.margin_bottom : 0%>
        mb-<%= opt.spacing?.mobile ? opt.spacing.mobile.margin_bottom : 0%>
        pt-md-<%= opt.spacing?.desktop ? opt.spacing.desktop.padding_top : 0%>
        pt-<%= opt.spacing?.mobile ? opt.spacing.mobile.padding_top : 0 %>
        pb-md-<%= opt.spacing?.desktop ? opt.spacing.desktop.padding_bottom : 0%>
        pb-<%= opt.spacing?.mobile ? opt.spacing.mobile.padding_bottom : 0%>
      "
      style="
        --title_color:<%= opt.title_color %>;
        --description_color:<%= opt.description_color %>;
        --secondary_color:<%= opt.section_secondary_color %>;     
      "
      >
      <div>
        <div class="row justify-content-center">
          <div class="col-md-11 col-12">        
            <%- await include('@/sections/inc/apx-title-section', {
              _, opt: { ...opt }
            }) %> 
          </div>        
        </div>
        <div class="row my-5 pb-3">
          <div class="col-12">
            <div
            class="apx list-slider"
            data-size="<%= opt.banners.length %>"
          >
            <div
              class="glide"
              data-wait-mutation="false"
              data-autoplay=""
              data-per-view="3"
              data-per-view-md="3"
              data-per-view-sm="1"
            >
              <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides list-carousel__list">
                  <% for (let i = 0; i < opt.banners.length; i++) { %>
                    <li class="glide__slide list-carousel__item">
                     <div class="item px-4">
                      <div class="image">
                        <img src="<%= opt.banners[i].img %>" class="w-100"/>
                      </div>
                      <h4 class="d-block my-4"><%= opt.banners[i].title %></h4>
                      <p class="text-center my-4 d-block"><%= opt.banners[i].description %></p>
                      <ul class="props">
                        <% for (let x = 0; x < opt.banners[i].props.length; x++) {%>
                          <li>
                            <span>
                              <img src="<%= opt.banners[i].props[x].img %>"/>
                            </span>
                            <p>
                              <%- opt.banners[i].props[x].text %>
                            </p>
                          </li>
                        <% } %>
                      </ul>
                      
                     </div>
                    </li>
                  <% } %>
                </ul>

                <div
                  class="glide__arrows glide__arrows--outer"
                  data-glide-el="controls"
                >
                  <button
                    class="btn glide__arrow glide__arrow--left"
                    data-glide-dir="<"
                    aria-label="<%= _.dictionary('previous') %>"
                  >
                    
                    <svg width="21" height="38" viewBox="0 0 21 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <line x1="19.7071" y1="0.707107" x2="0.707107" y2="19.7071" stroke="#131313" stroke-width="2"/>
                      <line y1="-1" x2="26.8701" y2="-1" transform="matrix(-0.707107 -0.707107 -0.707107 0.707107 19 38)" stroke="#131313" stroke-width="2"/>
                      </svg>
          
                  </button>
                  <button
                    class="btn glide__arrow glide__arrow--right"
                    data-glide-dir=">"
                    aria-label="<%= _.dictionary('next') %>"
                  >
                    
                    <svg width="21" height="38" viewBox="0 0 21 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <line y1="-1" x2="26.8701" y2="-1" transform="matrix(0.707107 0.707107 0.707107 -0.707107 2 0)" stroke="#131313" stroke-width="2"/>
                      <line x1="1.29289" y1="37.2929" x2="20.2929" y2="18.2929" stroke="#131313" stroke-width="2"/>
                      </svg>
          
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>  
      <div class="row mt-5">
        <div class="col-12 justify-content-center text-center d-flex align-items-center">
          <%- await include('@/sections/inc/apx-cta-section', {
            _, opt: { ...opt }
          }) %>
        </div>
      </div>  
  </div>
</div>